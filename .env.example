# Roast Tracker 2000 - Environment Configuration
# Copy this file to .env and update values for your deployment

# Django Secret Key - CHANGE THIS IN PRODUCTION!
# Generate one at: https://djecrety.ir/
SECRET_KEY=change-me-to-a-random-secret-key

# Debug mode - set to False in production
DEBUG=False

# Allowed hosts - comma separated list
# Add your Unraid server IP or hostname
ALLOWED_HOSTS=localhost,127.0.0.1,your-unraid-ip

# CORS origins - comma separated list of frontend URLs
# Update with your actual frontend URL
CORS_ORIGINS=http://localhost:3000,http://your-unraid-ip:3000

# API URL for frontend to connect to backend
# Update with your actual backend URL
API_URL=http://your-unraid-ip:8000
